<% provide(:title, 'ご意見・ご要望') %>
<div class="form-title">
  <h1>ご意見・ご要望</h1>
</div>

<% if current_user && current_user.admin? %>
  <div class="admin-entrance">
    <%= link_to "管理者専用ページ", contacts_path %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3 contact-new">
    <%= form_with(url: contacts_path, scope: :contact, local: true) do |f| %>
      
      <%= f.label :title, "タイトル ※必須"%>
      <%= f.text_field :title %>
      
      <%= f.label :content, "サイトの問題点やご意見、ご質問等の詳細をご入力ください。 ※必須" %>
      <%= f.text_area :content %>
      
      <p>※個別に回答を希望される方は下記の情報もご入力下さい。</p>
      
      <%= f.label :name, "名前" %>
      <%= f.text_field :name %>

      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email %>

      <%= f.submit "Post", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>