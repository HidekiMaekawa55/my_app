<div class="club_show">
  <h1><%= @club.name %></h1>
  <p><%= link_to "編集", edit_club_path(@club) %></p>
  <p><%= link_to "興味ある", "/likes/#{@club.id}/create",
          data: {confirm: "あたなの情報を送信します。よろしいですか？"} %></p>
  
  <div class="club_img">
    <%= image_tag "club/club#{@club.id}.jpg" %>
  </div>
  
  <div class="club_content">
    <%= @club.content %>
  </div>
  
  <% unless @club.date.blank? %>
  <table border="1" class="club_table">
    <tr>
      <td>活動曜日・時間</td>
      <td><%= @club.date %></td>
    </tr>
    <tr>
      <td>部員数</td>
      <td><%= @club.member %></td>
    </tr>
    <tr>
      <td>活動場所</td>
      <td><%= @club.place %></td>
    </tr>
    <% unless @club.league.blank? %>
      <tr>
        <td>所属リーグ</td>
        <td><%= @club.league %></td>
      </tr>
    <% end %>
  </table>
  <% end %>
  
  <div class="club_likes">
    <% if current_user %>
      <% if (current_user.email == @club.email) || current_user.admin?  %>
        <h1>興味を持ってくれている方々</h1>
        <% @likes.each do |like| %>
          <div class="club_likes_user_box">
            <p><%= like.user.name %></p>
            <p><%= like.user.email %></p>
            <p><%= like.created_at.to_s(:datetime_jp) %></p>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>


