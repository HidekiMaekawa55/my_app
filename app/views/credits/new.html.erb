<% provide(:title, '楽単情報投稿') %>
<h1>Credit form</h1>

<div class="row credit-form">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @credit, local: true) do |f| %>
      
      <dl>
        <dt>学部学科選択</dt>
        <dd>
          学部：
          <%= f.select :undergraduate, [["人文学部", "人文学部"],
          ["外国語学部", "外国語学部"], ["経済学部", "経済学部"],
          ["経営学部", "経営学部"], ["法学部", "法学部"],
          ["総合政策学部", "総合政策学部"], ["理工学部", "理工学部"],
          ["国際教養学部", "国際教養学部"]], {include_blank: "選択して下さい"} %>
      
          学科：
          <%= f.select :department, [], {include_blank: "選択してください"} %>
        </dd>
        <dt><%= f.label :class_name, "授業名" %></dt>
        <dd><%= f.text_field :class_name %></dd>
        <dt><%= f.label :teacher_name, "教授・講師名" %></dt>
        <dd><%= f.text_field :teacher_name %></dd>
        <dt>評価</dt>
        <dd>
          <div class="radio">
            <table border="1">
              <tr>
                <td>内容充実度</td>
                <td>
                  <%= f.radio_button :fulfillment, :"5" %>
                  <%= f.label :fulfillment_5, "とても充実" %><br>
                  <%= f.radio_button :fulfillment, :"4" %>
                  <%= f.label :fullfillment_4, "充実" %><br>
                  <%= f.radio_button :fulfillment, :"3" %>
                  <%= f.label :fullfillment_3, "どちらでもない" %><br>
                  <%= f.radio_button :fulfillment, :"2" %>
                  <%= f.label :fullfillment_2, "空虚" %><br>
                  <%= f.radio_button :fulfillment, :"1" %>
                  <%= f.label :fullfillment_1, "とても空虚" %>
                </td>
              </tr>
              <tr>
                <td>単位取得度</td>
                <td>
                  <%= f.radio_button :ease, :"5" %>
                  <%= f.label :ease_5, "とても簡単" %><br>
                  <%= f.radio_button :ease, :"4" %>
                  <%= f.label :ease_4, "簡単" %><br>
                  <%= f.radio_button :ease, :"3" %>
                  <%= f.label :ease_3, "どちらでもない" %><br>
                  <%= f.radio_button :ease, :"2" %>
                  <%= f.label :ease_2, "難しい" %><br>
                  <%= f.radio_button :ease, :"1" %>
                  <%= f.label :ease_1, "とても難しい" %>
                </td>
              </tr>
              <tr>
                <td>出席</td>
                <td>
                  <%= f.radio_button :attendance, :"ほぼ毎回取る" %>
                  <%= f.label :attendance_ほぼ毎回取る, "ほぼ毎回取る" %><br>
                  <%= f.radio_button :attendance, :"たまにとる" %>
                  <%= f.label :attendance_たまにとる, "たまにとる" %><br>
                  <%= f.radio_button :attendance, :"とらない" %>
                  <%= f.label :attendance_とらない, "とらない" %>
                </td>
              </tr>
              <tr>
                <td>テスト形式(中間)</td>
                <td>
                  <%= f.radio_button :mid_test_format, :"テストのみ" %>
                  <%= f.label :mid_test_format_テストのみ, "テストのみ" %><br>
                  <%= f.radio_button :mid_test_format, :"レポートのみ" %>
                  <%= f.label :mid_test_format_レポートのみ, "レポートのみ" %><br>
                  <%= f.radio_button :mid_test_format, :"両方あり" %>
                  <%= f.label :mid_test_format_両方あり, "両方あり" %><br>
                  <%= f.radio_button :mid_test_format, :"両方なし" %>
                  <%= f.label :mid_test_format_両方なし, "両方なし" %>
                </td>
              </tr>
              <tr>
                <td>テスト形式(期末)</td>
                <td>
                  <%= f.radio_button :final_test_format, :"テストのみ" %>
                  <%= f.label :final_test_format_テストのみ, "テストのみ" %><br>
                  <%= f.radio_button :final_test_format, :"レポートのみ" %>
                  <%= f.label :final_test_format_レポートのみ, "レポートのみ" %><br>
                  <%= f.radio_button :final_test_format, :"両方あり" %>
                  <%= f.label :final_test_format_両方あり, "両方あり" %><br>
                  <%= f.radio_button :final_test_format, :"両方なし" %>
                  <%= f.label :final_test_format_両方なし, "両方なし" %>
                </td>
              </tr>
              <tr>
                <td>テスト時の持ち込み</td>
                <td>
                  <%= f.radio_button :item, :"持ち込み可能" %>
                  <%= f.label :item_持ち込み可能, "持ち込み可能" %><br>
                  <%= f.radio_button :item, :"持ち込み不可能" %>
                  <%= f.label :item_持ち込み不可能, "持ち込み不可能" %><br>
                  <%= f.radio_button :item, :"テストなし" %>
                  <%= f.label :item_テストなし, "テストなし" %>
                </td>
              </tr>
              <tr>
                <td>教科書</td>
                <td>
                  <%= f.radio_button :textbook, :"教科書必要" %>
                  <%= f.label :textbook_教科書必要, "教科書必要" %><br>
                  <%= f.radio_button :textbook, :"教科書なし、または不要" %>
                  <%= f.label :textbook_教科書なしまたは不要, "教科書なし、または不要" %>
                </td>
              </tr>
            </table>
          </div>
        </dd>
        <dt><%= f.label :comment %></dt>
        <dd><%= f.text_area :comment %></dd>
      </dl>
      <%= f.submit "Post", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<%= javascript_pack_tag 'credits/new.js' %>

