<header class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to "NJS", root_path, id: "logo" %>
    <h3 id = "logo-help">南山大学生のための<br>情報サイト</h3>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "NEWS",   manuscripts_path %></li>
        <li><%= link_to "EVENT",   events_path %></li>
        <li><%= link_to "CLUB", clubs_path %></li>
        <li><%= link_to "CREDIT", credits_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              ACCOUNT <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
          <li><%= link_to "新規登録", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>